<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.huatec.teaching.dao.TclassDao">

	<resultMap id="t_class" type="com.huatec.teaching.domain.TclassDO">
        <result property="id" column="id" javaType="java.lang.Integer"/>
        <result property="className" column="class_name" javaType="java.lang.String"/>
        <result property="studentNum" column="student_num" javaType="java.lang.Integer"/>
	</resultMap>
	<!--<cache type="com.study.cache.MyCache" flushInterval="6000000" />-->
	
	<sql id="myColumns">
	   
			a.id,
			a.class_name,
			a.student_num	  
	</sql>
	
	<sql id="myColumns1">
	   
			a.id as id,
			a.class_name as className,
			a.student_num as studentNum	  
	</sql>

	<insert id="save" useGeneratedKeys="true" keyProperty="id"  parameterType="com.huatec.teaching.domain.TclassDO">
    
        INSERT INTO t_class 
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="id!=null">
					id ,
				</if>	
        <if test="className!=null">
					class_name ,
				</if>	
        <if test="studentNum!=null">
					student_num 
				</if>	
        </trim>
         <trim prefix="values (" suffix=")" suffixOverrides=",">
        	<if test="id!=null">
        	#{id} ,
        	</if>
        	<if test="className!=null">
        	#{className} ,
        	</if>
        	<if test="studentNum!=null">
        	#{studentNum} 
        	</if>
        </trim>
  
		
	</insert>
    
	<update id="update"  parameterType="com.huatec.teaching.domain.TclassDO" >
    
        UPDATE t_class 
        <set>
	        <if test="className!=null">
	        class_name = #{className} ,
	        </if>
	        <if test="studentNum!=null">
	        student_num = #{studentNum} 
	        </if>
	        </set>
        WHERE 
	        id = #{id} 
   
	</update>

    <delete id="delete" parameterType="map">
        DELETE FROM t_class WHERE
        id = #{id}

         
    </delete>
    
    <select id="findById" resultMap="t_class"  parameterType="map">
		SELECT <include refid="myColumns"/>
	 
		    FROM t_class a
	        WHERE 
		        a.id = #{id}

		         
	  
	</select>
	
	<select id="findTclassList" parameterType="map" resultMap="t_class">
		select 
		<include refid="myColumns"/>
		 from t_class a
		<where>
			<include refid="myWhereInclude"/>
		</where>
		<include refid="BaseSql.sqlEnd"/>
		
	</select>	
	<select id="findTclassCount" parameterType="map"
		resultType="int">
		select count(*) from t_class a
		<where>
			<include refid="myWhereInclude"/>
		</where>
		<include refid="BaseSql.sqlEndNoLimit"/>
	</select>
	
		
	<sql id="myWhereInclude">
	     <if test="entity.id!=null">
				AND a.id = #{entity.id}
			</if>
	     <if test="entity.className!=null">
				AND a.class_name = #{entity.className}
			</if>
	     <if test="entity.studentNum!=null">
				AND a.student_num = #{entity.studentNum}
			</if>
	</sql>
</mapper>

